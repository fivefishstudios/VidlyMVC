@model Vidly.Models.Movie
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model == null)
{
    <p>There is no movie found.</p>
}
else
{
    <h1>@Model.Name</h1>
    <small>Id=@Model.Id</small>
    <hr />

    <p>Genre: @Model.Genre.GenreName</p>
    <p>Starring @Model.Actor</p>
    <p>Qty in Stock: @Model.Stock</p>
    <p>Release Date: @Model.ReleaseDate.ToString("MM/dd/yyyy")</p>

}
