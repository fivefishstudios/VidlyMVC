@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<table class="table table-striped">
    <thead>
        <td>Name</td>
        <td>Id</td>
        <td>View</td>
    </thead>
    <tbody>
            
        @foreach (var customer in Model.ToList())
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Id</td>
                <td>@Html.ActionLink("View Details", "View", "Customers", new { id=customer.Id }, null)</td>
            </tr>
        }
            
    </tbody>
</table>
