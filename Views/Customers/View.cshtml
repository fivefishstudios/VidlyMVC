@model Vidly.Models.Customer
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null)
{
    <h2>There is no customer with that Id.</h2>
}
else
{
    <h2>@Model.Name</h2>
    <small>Customer Id: @Model.Id</small>
    <hr />
    <p>Membership Type: @Model.MembershipType.Description</p>
    <p>Discount: @Model.MembershipType.DiscountRate%</p>
    <p>Address: @Model.City</p>
    <p>Birthdate: @Model.Birthdate.ToString("MM/dd/yyyy")</p>

}




