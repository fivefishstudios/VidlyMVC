@model Vidly.Models.Genre
@{
    ViewBag.Title = "Add/Update Genre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model == null)
{
    <h2>Add New Genre</h2>
}
else
{
    <h2>Update Genre</h2>
}

@using (Html.BeginForm("Save", "Genre", null, FormMethod.Post, new { @class = "myForm" }))
{
    <div class="form-group">
        @Html.LabelFor(g => g.GenreName)
        @Html.TextBoxFor(g => g.GenreName, null, new { @class = "form-control", placeholder = "Enter genre name" })
        @Html.ValidationMessageFor(g => g.GenreName)
    </div>
    @Html.HiddenFor(g => g.Id)
    <button type="submit" class="btn btn-primary">Save Genre</button>
}